@page
@model GourmetPizzaPrac3.Pages.Customers.MyDetailsModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "My Details";
}

<h2>My Details</h2>

@if ((string)ViewData["ExistInDB"] == "true")
{
    <h4>Welcome, @UserManager.GetUserName(User)! You can edit your details below. </h4>
}
else
{
    <h4>Welcome, @UserManager.GetUserName(User)! You should enter your details below before browsing other links. </h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customers.FamilyName" class="control-label"></label>
                <input asp-for="Customers.FamilyName" class="form-control" />
                <span asp-validation-for="Customers.FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.GivenName" class="control-label"></label>
                <input asp-for="Customers.GivenName" class="form-control" />
                <span asp-validation-for="Customers.GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.DateOfBirth" class="control-label"></label>
                <input asp-for="Customers.DateOfBirth" class="form-control" />
                <span asp-validation-for="Customers.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.MobileNumber" class="control-label"></label>
                <input asp-for="Customers.MobileNumber" class="form-control" />
                <span asp-validation-for="Customers.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.PostalCode" class="control-label"></label>
                <input asp-for="Customers.PostalCode" class="form-control" />
                <span asp-validation-for="Customers.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewData["SuccessDB"] != null)
{
    <hr />
    <h5>
        Thanks. You have successfully updated your details with your name
        <strong>@Model.Customers.FamilyName @Model.Customers.GivenName</strong>
        ,your date of birth <strong>@Model.Customers.DateOfBirth</strong>
        ,your mobile number <strong>@Model.Customers.MobileNumber</strong>
        and your postcode number <strong>@Model.Customers.PostalCode</strong>.
    </h5>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



